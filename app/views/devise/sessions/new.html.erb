<style>
  body {
    background-color: rgba(0, 209, 177,0.3); /* Color primario con transparencia */
  }
</style>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <body>
    <section class="hero is-fullheight">
      <div class="hero-body">

        <div class="container is-max-desktop is-centered "style="max-width: 600px; ">
          <div class="notification is-white">

            <label class="label has-text-primary is-size-4" style="font-weight: 600;">Iniciar Sesión</label>


            <div class="field">
              <%= f.label :email,"Email", class: "label has-text-black is-size-5", style: "font-weight: 350;"%>

              <%= f.email_field :email, class: "input is-primary is-small is-rounded", autofocus: true, autocomplete: "email", placeholder:"Ingrese su email" %>
            </div>



            <div class="field">
              <%= f.label :password, "Contraseña", class: "label has-text-black is-size-5", style: "font-weight: 350;" %>
              <%= f.password_field :password, class: "input is-primary is-small is-rounded", autocomplete: "current-password", placeholder: "Ingrese su contraseña"%>
            </div>



            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :recordar_sesión %>
              </div>
            <% end %>

            <div class="buttons" style="display: flex; justify-content: flex-end;">

              <a href="<%= root_path %>" class="button">Volver atrás</a>
              <div class="actions">
                <%= f.submit "Ingresar",class: "button is-primary"%>
              </div>

            </div>


            <% end %>

            <%= render "devise/shared/links" %>

        </div>
      </div>
    </div>
  </section>
</body>
