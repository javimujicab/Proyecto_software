<style>
  body {
    background-color: rgba(242, 242, 242,0.4); /* Color primario con transparencia */
    height: 100vh; /* Establece la altura del body al 100% de la ventana del navegador */
    margin: 0;
  }
</style>



<section class="hero is-primary is-small">
  <!-- Hero head: will stick at the top -->
  <div class="hero-head">
    <nav class="navbar">
      <div class="container">
        <div class="navbar-brand">

          <span class="navbar-burger" data-target="navbarMenuHeroA">
            <span></span>
            <span></span>
            <span></span>
          </span>
        </div>
        <div id="navbarMenuHeroA" class="navbar-menu">
          <div class="navbar-end">
            <a href="<%=posts_index_path%>" class="navbar-item ">
              <span>Todas las Publicaciones</span>
            </a>
            <a href="<%=perfil_path%>" class="navbar-item ">
              <span>Mi Perfil</span>
            </a>
            <a href="<%= root_path %>" class="navbar-item is-active">
              Home
            </a>

          </div>
        </div>
      </div>
    </nav>
  </div>

  <!-- Hero content: will be in the middle -->
  <div class="hero-body">
    <div class="container has-text-centered">
      <p class="title">
        Solicitudes Enviadas
      </p>
      <p class="subtitle">
        Revisa el estado en que se encuentran tus solicitudes
      </p>
    </div>
  </div>

  <!-- Hero footer: will stick at the bottom -->
  <div class="hero-foot">

  </div>
</section>

<br>

<table class="table is-striped is-narrow is-hoverable is-fullwidth">

    <tbody>
    <tr>
        <th>Curso</th>
        <th>Sigla</th>
        <th>Fecha</th>
        <th>Estado</th>
        <th></th>


    </tr>
    <% @user = User.find(current_user.id)%>
    <% @user.solicits.each do |solicit| %>
        <tr>
        <td><%= solicit.post.titulo %> </td>
        <td><%= solicit.post.sigla_ramo%></td>
        <td><%= solicit.fecha %> </td>
        <td><%= solicit.aceptado %></td>
        <td><%= button_to "Eliminar solicitud", delete_solicit_path(solicit_id: solicit.id, post_id: solicit.post_id),method: :delete, class: "link"%></td>
        </tr>
    <% end %>


    </tbody>
</table>
